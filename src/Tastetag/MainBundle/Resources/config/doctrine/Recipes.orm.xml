<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Tastetag\MainBundle\Entity\Recipes" table="recipes">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="name" type="string" column="name" length="255" nullable="false"/>
    <field name="description" type="text" column="description" nullable="false"/>
    <field name="difficulty" type="integer" column="difficulty" nullable="true"/>
    <field name="preparationTime" type="time" column="preparation_time" nullable="true"/>

    <one-to-many field="ingridients" target-entity="Ingridients" mapped-by="recipe">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>
